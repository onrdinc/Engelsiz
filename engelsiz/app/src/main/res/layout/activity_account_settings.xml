<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettingsActivity"
    android:background="@drawable/login_bg">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        android:onClick="profile"
        />
    <ImageView
        android:layout_marginTop="0dp"
        android:id="@+id/imgLogo"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:src="@drawable/engelsiz"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayarlar"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"

        />
    <TextView
        android:id="@+id/tv_editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profili Düzenle"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="220dp"
        android:textSize="20dp"
        android:onClick="editProfile"
        />

    <TextView
        android:id="@+id/tv_changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifreyi Değiştir"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/tv_editProfile"
        android:onClick="changePassword"

        />


    <TextView
        android:id="@+id/tv_deleteAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabı Sil"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/tv_changePassword"


        />

    <TextView
        android:id="@+id/tv_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çıkış Yap"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/tv_deleteAcc"

        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_navigation"
        app:itemBackground="@color/transparent"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>