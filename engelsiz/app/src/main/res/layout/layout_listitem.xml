<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    android:orientation="horizontal"
    android:background="@drawable/login_bg">

    <ImageView
        android:layout_marginTop="0dp"
        android:id="@+id/imgLogo"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:src="@drawable/engelsiz"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/displayName"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:text="Ekleyen:"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_below="@+id/displayName"
        android:text="Ekleme Türü:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisplayType"
        android:layout_below="@+id/displayName"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:layout_below="@+id/type"
        android:text="Açıklama:"
        android:layout_marginLeft="20dp"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisplayQuantity"
        android:layout_below="@+id/txtDisplayType"
        android:layout_marginLeft="150dp"

        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/quantity"
        android:text="Bilgi:"
        android:layout_marginLeft="20dp"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisplayAddress"
        android:layout_below="@+id/txtDisplayQuantity"
        android:layout_marginLeft="150dp"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_below="@+id/address"
        android:text="İletişim:"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisplayPhone"
        android:layout_below="@+id/txtDisplayAddress"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserId"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="40dp"
        android:visibility="invisible"
        />


</RelativeLayout>