<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:background="@drawable/login_bg">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_navigation"
        app:itemBackground="@color/transparent"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_marginTop="0dp"
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/engelsiz"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-medium"
        android:text="Yeni paylaşım mı yapmak istiyorsun?"
        android:textSize="23sp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Bilgileri Eksiksiz Olarak Doldurunuz!"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="Ekleme Türü:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etType"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        />
    <TextView
        android:id="@+id/txtQuantity"
        android:layout_below="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Açıklama:"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/etQuantity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/etType"
        />
    <TextView
        android:id="@+id/txtAddress"
        android:layout_below="@+id/txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="Bilgi:"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/etQuantity"
        />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_below="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="İletişim:"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/etAddress"
        />

    <Button
        android:id="@+id/btnAdd"
        android:text="ekle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/txtPhone"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:background="@drawable/btn_bg"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarAdd"
        android:layout_below="@+id/btnAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

</RelativeLayout>